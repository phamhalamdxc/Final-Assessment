@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Đơn hàng - Chi tiết</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="col-md-6">
            @if (ViewData["IsSuccess"] != null)
            {
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    Lưu thành công. Nhấn vào <a asp-action="Index" asp-controller="Category" class="alert-link">đây</a> để trở về trang trước.
                </div>
            }
            <div class="form-group">
                <label>Mã: </label><span> 1</span>
            </div>
            <div class="form-group">
                <label>Tên người đặt: </label><span> Customer Name</span>
            </div>
            <div class="form-group">
                <label>Ngày đặt: </label><span> 10/12/2017</span>
            </div>
            <div class="form-group">
                <label>Số điện thoại: </label><span> 01644593272</span>
            </div>
            <div class="form-group">
                <label>Địa chỉ: </label><span> Address</span>
            </div>
            <div class="form-group">
                <label>Tình trạng: </label>
                @switch (COmpStore.FrontEnd.OrderStatus.NotProcessYet)
                {
                    case COmpStore.FrontEnd.OrderStatus.NotProcessYet:
                        <span>Chưa xử lí</span>
                        break;
                    case COmpStore.FrontEnd.OrderStatus.Processing:
                        <span>Đang xử lí</span>
                        break;
                    case COmpStore.FrontEnd.OrderStatus.Processed:
                        <span>Đã hoàn tất</span>
                        break;
                    case COmpStore.FrontEnd.OrderStatus.Denied:
                        <span>Đã bị từ chối</span>
                        break;

                }


            </div>
            <div class="form-group">
                <label>Số lượng sản phẩm đặt: </label><span> 10</span>
            </div>
        </div>

    </div>
    <!-- /.col-lg-12 -->
    <div class="col-md-12">
        <div class="panel-body">
            @if (COmpStore.FrontEnd.OrderStatus.Processing == COmpStore.FrontEnd.OrderStatus.Processing)
            {
                <div class="form-group">
                    <a asp-action="CompleteOrder" asp-controller="Order" asp-route-categoryId="1" class="btn btn-primary btn-sm">Hoàn tất</a>
                    <a asp-action="DeniedOrder" asp-controller="Order" asp-route-categoryId="1" class="btn btn-danger btn-sm">Hủy</a>

                </div>
            }

            <div class="table-responsive">
                <table id="content_table" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 5; i++)
                        {
                            <tr data-id="@i">
                                <td>@i</td>
                                <td>Product Name @i</td>
                                <td>12</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-controller="Product" asp-route-id="@i" class="text-primary" title="Chi tiết">
                                        <span class="glyphicon glyphicon-info-sign"></span>
                                    </a>
                                    <a asp-action="Update" asp-controller="Product" asp-route-id="@i" class="text-primary" title="Chỉnh sửa">
                                        &nbsp;<span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
